<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_40_tran"
    android:id="@+id/close_data_view_box"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/close_data_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_data_analysis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/name_analysis_data"
                app:layout_constraintBottom_toBottomOf="@id/name_analysis_data"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/transparent_color"
                />

            <TextView
                android:id="@+id/name_analysis_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/close_data_view"
                app:layout_constraintBottom_toTopOf="@id/text1"
                android:layout_marginEnd="32dp"
                android:paddingTop="16dp"
                android:layout_marginBottom="16dp"

                android:text="Клинический анализ крови с лейкоцитарной формулой"
                android:maxLines="3"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textColor="@color/Caption"
                android:textSize="18sp"

                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/description_analysis_data"
                android:layout_marginBottom="16dp"
                />
            <TextView
                android:id="@+id/description_analysis_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Клинический анализ крови – это самое важное комплексное лабораторное исследование при обследовании человека с любым заболеванием. Изменение исследуемых показателей, как правило, происходит задолго до появления видимых симптомов болезни. "
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text2"
                android:layout_marginBottom="12dp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подготовка"
                android:textColor="@color/Caption"
                android:textSize="18sp"

                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/description2_analysis_data"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:id="@+id/description2_analysis_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Клинический анализ крови – это самое важное комплексное лабораторное исследование при обследовании человека с любым заболеванием. Изменение исследуемых показателей, как правило, происходит задолго до появления видимых симптомов болезни. "
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/group1_ll"
                android:layout_marginBottom="36dp"
                />

            <LinearLayout
                android:id="@+id/group1_ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Результаты через:"
                            android:textColor="@color/Caption"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:id="@+id/dayCount_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 день"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Биоматериал"
                            android:textColor="@color/Caption"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:id="@+id/material"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Венозная кровь"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:text="Добавить за 690 ₽"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/order_button_style"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>