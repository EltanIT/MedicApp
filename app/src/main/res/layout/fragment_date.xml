<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_screens.fragments.place_on_order_view_fragments.DateFragment"
    android:background="@color/black_40_tran"
    android:id="@+id/date_cl_view">

        <androidx.cardview.widget.CardView
            android:id="@+id/date_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="8dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageButton
                    android:id="@+id/close_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close_data_analysis"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/transparent_color"
                    />

                <TextView
                    android:id="@+id/text1_view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/close_date_view"
                    android:layout_marginEnd="32dp"

                    android:text="Дата и время"
                    android:maxLines="3"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    />
                <LinearLayout
                    android:id="@+id/date_ll_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text1_view2"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Выберите дату"
                        android:textColor="@color/Caption"
                        android:layout_marginBottom="8dp"
                        />

                    <Spinner
                        android:id="@+id/date_sp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        tools:listitem="@layout/view_place_on_order_select_date"
                        android:background="@drawable/analisis_search_et_style"
                        android:backgroundTint="@color/Input_Stroke"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выберите время"
                    android:textColor="@color/Caption"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/date_ll_view"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    />


                <androidx.constraintlayout.helper.widget.Flow
                    android:orientation="horizontal"
                    android:id="@+id/time_today_flow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text5"
                    android:layout_marginTop="16dp"
                    app:constraint_referenced_ids="time_10, time_13, time_14, time_15, time_16, time_18, time_19"
                    app:flow_wrapMode="aligned"
                    app:flow_verticalGap="16dp"
                    app:flow_horizontalGap="4dp"
                    android:layout_marginBottom="16dp"

                    />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"
                    android:textColor="@color/Caption"
                    android:text="10:00"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="13:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="14:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="15:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="16:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="18:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainscreen_button_category_style"

                    android:text="19:00"
                    android:textColor="@color/Caption"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/date_continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/order_button_style"
                    android:text="Продолжить"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_today_flow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginHorizontal="16dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>